@model CreateCommentDto

<h4 class="mb-4">Bir Yorum Bırakın</h4>
<small>Yorumunuzun alınması için geçerli bir email adresi giriniz. * ile işaretlenmiş alanlar zorunludur.</small>
<div class="d-flex my-3">
    <p class="mb-0 mr-2">Ürün Puanınız * :</p>
    <div class="text-primary">
        <i class="far fa-star"></i>
        <i class="far fa-star"></i>
        <i class="far fa-star"></i>
        <i class="far fa-star"></i>
        <i class="far fa-star"></i>
    </div>
</div>
<form asp-controller="ProductList" asp-action="AddComment" method="post">
    <input asp-for="ProductId" hidden readonly/>
    <div class="form-group">
        <label for="message">Yorumunuz *</label>
        <textarea asp-for="CommentDetail" cols="30" rows="5" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label for="name">Adınız Soyadınız *</label>
        <input type="text" class="form-control" id="name" asp-for="NameSurname">
    </div>
    <div class="form-group">
        <label for="email">Email adresiniz *</label>
        <input type="email" class="form-control" asp-for="Email" id="email">
    </div>
    <div class="form-group mb-0">
        <input type="submit" value="Yorum Yap" class="btn btn-primary px-3">
    </div>
</form>
