@model UpdateProductDetailDto
@{
    ViewData["Title"] = "UpdateProductDetail";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>Ürün Detayı Güncelleme Sayfası</h4>
                <br />
                <div class="bs-example" data-example-id="bordered-table">
                    <form method="post">
                        @if (Model == null)
                        {
                            <input type="hidden" asp-for="ProductId" value="@ViewBag.productDetailProductId" />
                        }
                        else
                        {
                            <input type="hidden" asp-for="ProductId" />
                            <input type="text" hidden asp-for="ProductDetailID" />
                        }   
                        <label>Ürün Açıklaması</label>
                        <textarea rows="5" class="form-control" asp-for="ProductDescription"></textarea>
                        <br />
                        <label>Ürün Bilgisi</label>
                        <textarea rows="5" class="form-control" asp-for="ProductInfo"></textarea>
                        <br />
                        <button class="btn btn-primary">Ürün Detayı Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

